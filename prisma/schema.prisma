generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id         String   @id @default(uuid())
    name       String
    email      String   @unique
    password   String
    likedGames Game[]   @relation("UserLikedGames")
    gamesPurchased Game[] @relation("UserGamesPurchased")
    comments   Comment[]
    createdAt  DateTime @default(now())
}

model Game {
    id            String   @id @default(uuid())
    name          String
    section       String
    inOffer       Boolean
    price         Float
    oldPrice      Float
    totalDiscount Int
    cover         String
    imagesCover   String[]
    description   String
    yearOfRelease DateTime
    reviews       Float
    comments      Comment[]
    usersWhoLiked User[]   @relation("UserLikedGames")
    userWhoPucharsed User[]  @relation("UserGamesPurchased")
    createdAt     DateTime @default(now())
}

model Comment {
    id            String   @id @default(uuid())
    authorId      String
    gameId        String
    game          Game @relation(fields: [gameId], references: [id])
    author        User @relation(fields: [authorId], references: [id])
    description   String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

